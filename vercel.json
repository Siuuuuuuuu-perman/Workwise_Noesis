{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main_lightweight.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main_lightweight.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}
